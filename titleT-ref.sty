\ProvidesPackage{titleT-ref}

\usepackage{titletoc}
\setcounter{tocdepth}{0}

\usepackage[compact,toctitles]{titlesec}
\titleclass{\part}{top}

\titleformat{\part}[block]{\huge\bfseries\centering\vspace*{\fill}}{\thepart}{10pt}{\huge}[\vspace*{\fill}] 

\titleformat{\chapter}[block]
{\huge}{\chaptertitlename\ \thechapter:\ }{0pt}{\huge}[\grenewcommand{\bibheader}{bibchap}\addtocontents{key-\thecherrychapter}{\currentname(c)}\addtocounter{cherrychapter}{1}
]

\titleformat{\section}{\LARGE}{}{0pt}{\LARGE}[
\grenewcommand{\bibheader}{bibsec}
\headinginfo{\currentname}
\addtocontents{key-\thecherrychapter}{\hspace{5mm}\currentname(s)}
]

\titleformat{\subsection}[display]{\large}{}{0pt}{\large\scshape}[\headinginfo{\currentname}
\grenewcommand{\bibheader}{bibsubsec}\headinginfo{\currentname}
]

\titlespacing*{\part}{0pt}{0pt}{0pt}
\titlespacing*{\chapter}{0pt}{0pt}{0pt}
\titlespacing{\section}{0pt}{*0}{*0}
\titlespacing{\subsection}{0pt}{*0}{*0}
\titlespacing{\subsubsection}{0pt}{*0}{*0}